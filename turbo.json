{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        /* hardhat-v2_hardhat-deploy-v0_external-lib */
        "AWS_REGION",
        "AWS_S3_BUCKET",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_ROLE_ARN",
        "SEPOLIA_RPC_URL",
        "SEPOLIA_MNEMONIC",
        "ETHERSCAN_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["build", "^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["build", "^check-types"]
    },
    "check-format": {
      "dependsOn": ["^check-format"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build", "^test"]
    }
  }
}
